
public class GameController
{
    private Game theGame;
    private GameView theView;
    
    public GameController()
    {
        theGame = new Game();
        theView = new GameView(theGame.getRows(), theGame.getColumns());
    }
    
    public void showView()
    {
        //theView.pack();
        theView.setVisible(true);
    }

}
